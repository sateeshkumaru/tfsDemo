json
Copy
Edit
{
  "request": {
    "method": "POST",
    "url": "/internal/owners",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.ownerId == '1')]"
      }
    ]
  },
  "response": {
    "status": 200,
    "bodyFileName": "internal-save-owner-response.json",
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
